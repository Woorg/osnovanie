// General body styles

.in
	margin auto
	padding-left 15px
	padding-right 15px
	max-width 1440px
	+r($t)
		padding-left 18px
		padding-right 18px

.page
	background-color #ffffff
	font-display swap
	font-family $mM
	font-weight normal
	font-size 16px
	line-height 1.5
	color #001d49
	letter-spacing -.01em
	&__w
		display flex
		flex-direction column
		min-height 100vh
		overflow auto
		overflow hidden
	&__content
		flex 1
	&__in
		padding-bottom 100px
		@extends .in
	&__row
		padding-bottom 46px
		border-bottom 2px solid #ebebeb
		display flex
		flex-flow row wrap
		justify-content space-between
		+r($t)
			padding-bottom 27px
	&__row_text-image

		align-items flex-start
		+r($t)
			display block
		.image
			+r($t)
				display none
	&__row_text-image .page__image,
	&__row_text-image .page__text
		max-width 48%
		+r($t)
			max-width 100%
	&__row_blockquote
		padding-top 44px
		padding-bottom 0
		+r($t)
			padding-top 27px
	&__row_column
		flex-flow column wrap

	&__tabs
		margin-bottom 40px
		padding-top 47px
		+r($t)
			padding-top 27px

	&__row_without-style
		padding-bottom 0
		border-bottom none

// Sticky footer
.main
	flex 1 0 auto



.transition-fade
	transition .4s
	opacity 1

html.is-animating .transition-fade
	opacity 0



