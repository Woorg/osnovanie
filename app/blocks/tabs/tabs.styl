.tabs
	&__nav
		font-size 0
	&__link
		margin-right 57px
		margin-bottom 41px
		display inline-block
		vertical-align top
		color #bfbfbf
		font-family $mM
		font-size 24px
		font-weight 500
		line-height 1.25
		letter-spacing .24px
		text-decoration none
		transition color .3s ease
		+r($m)
			margin-bottom 24px
		&:last-child
			margin-right 0
		&:hover
			color #c42141
			text-decoration underline
			transition color .3s ease

	&__link_active
		color #c42141
		text-decoration underline
		transition color .3s ease
	&__tab
		display none
		visibility hidden
		opacity 0

	&__tab,
	&__tab_active
		transition opacity .3s ease

	&__tab_active
		display block
		visibility visible
		font-size 14px
		color #000
		opacity 1
