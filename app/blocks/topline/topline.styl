.topline
	min-height 60px
	background-color #c42141
	+r($dS)
		display none
	&__in
		@extends .in
		padding-top 10px
		padding-bottom 14px
		display flex
		flex-flow row wrap
		justify-content flex-end

	&__address
		display flex
		justify-content flex-start
		align-items center
		color #fff
		font-size 18px
		font-family $mB
		font-weight 700
		text-decoration none
		letter-spacing .18px
		line-height 1.3

	&__address-icon
		margin-top 2px
		margin-right 15px
		width 33px
		height 33px
		fill #fff

	&__phone
		margin-left 50px


.phone
	display flex
	justify-content flex-start
	align-items center
	color #fff
	font-family $mB
	font-weight normal
	text-decoration none
	line-height 1.3
	&__icon
		margin-top 2px
		margin-right 15px
		width 33px
		height 33px
		fill #fff

	&__val
		font-size 24px
		white-space nowrap
		letter-spacing .24px
		display flex
		align-items baseline

	&__code
		padding-right 6px
		font-size 18px
		letter-spacing .18px
