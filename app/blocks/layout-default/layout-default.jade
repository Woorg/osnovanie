include /../node_modules/bemto.jade/bemto
include /../node_modules/jade-injected/jade-injected
include ../page/page
include ../scripts/scripts

doctype html
html(lang='ru')
	include ../head/head
	+page
		block content
		+scripts(['//maps.googleapis.com/maps/api/js?key=AIzaSyDkyWL0Wy1sh5FF86atx_AqpcId0o7XRxM', 'app.min.js'])

		script.

			function mapInit()
				{

					var styleArray = [
					{
						featureType: 'all',
						stylers: [
						{
							saturation: -100
						}]
					}];

					var mapOptions = {
						zoom: 17,
						center: new google.maps.LatLng(55.732307, 37.663773),
						styles: styleArray,
						scrollwheel: false,
						disableDefaultUI: true
					};


					var map = new google.maps.Map(document.getElementById('map'),
						mapOptions);

					var image = 'assets/images/general/map-marker.svg';
					var marker = new google.maps.Marker(
					{
						position:
						{
							lat: 55.732307,
							lng: 37.663773
						},
						map: map,
						icon: image
					});

					google.maps.event.addDomListener(window, 'resize', function()
					{
						var center = map.getCenter();
						google.maps.event.trigger(map, 'resize');
						map.setCenter(center);
					});

				}

				google.maps.event.addDomListener(window, 'load', mapInit);
